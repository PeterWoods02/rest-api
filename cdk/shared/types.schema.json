{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Player": {
            "additionalProperties": false,
            "properties": {
                "age": {
                    "type": "number"
                },
                "isCaptain": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "nationality": {
                    "type": "string"
                },
                "playerId": {
                    "type": "string"
                },
                "position": {
                    "type": "string"
                },
                "teamId": {
                    "type": "string"
                }
            },
            "required": [
                "age",
                "isCaptain",
                "name",
                "nationality",
                "playerId",
                "position",
                "teamId"
            ],
            "type": "object"
        },
        "Team": {
            "additionalProperties": false,
            "properties": {
                "country": {
                    "type": "string"
                },
                "founded": {
                    "type": "number"
                },
                "id": {
                    "type": "number"
                },
                "isActive": {
                    "type": "boolean"
                },
                "league": {
                    "type": "string"
                },
                "location": {
                    "type": "string"
                },
                "stadium": {
                    "type": "string"
                },
                "teamName": {
                    "type": "string"
                },
                "titlesWon": {
                    "type": "number"
                },
                "history": {
                    "type": "string"
                }
            },
            "required": [
                "country",
                "founded",
                "id",
                "isActive",
                "league",
                "location",
                "stadium",
                "teamName",
                "titlesWon",
                "history"
            ],
            "type": "object"
        },
            "PlayerQueryParams": {
            "type": "object",
            "properties": {
                "teamId": { "type": "string" },
                "position": { "type": "string" },
                "isCaptain": { "type": "string", "enum": ["true", "false"] }
            },
            "required": ["teamId"],
            "additionalProperties": false
            }
          }
    }


